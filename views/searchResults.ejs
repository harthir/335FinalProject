<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %> | Final Project</title>

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header class="site-header">
    <h1>ðŸ“š Book Explorer</h1>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/favorites">My Favorites</a>
    </nav>
  </header>

  <main class="container">
    <section class="card">
      <h2>Search Results for "<%= query %>"</h2>

      <form class="search-form" action="/search" method="get">
        <label for="search-input">Refine your search</label>
        <input
          id="search-input"
          type="text"
          name="q"
          placeholder="Search again..."
          value="<%= query %>"
          required
        />
        <button type="submit">Search</button>
      </form>

      <% if (error) { %>
        <p class="error"><%= error %></p>
      <% } %>

      <% if (results && results.length > 0) { %>
        <ul class="book-list">
          <% results.forEach(function(book) { %>
            <li class="book-item">
              <div class="book-cover">
                <% if (book.coverUrl) { %>
                  <img src="<%= book.coverUrl %>" alt="Cover for <%= book.title %>" />
                <% } else { %>
                  <div class="placeholder-cover">No Cover</div>
                <% } %>
              </div>
              <div class="book-info">
                <h3><%= book.title %></h3>
                <p class="book-author">by <%= book.author %></p>

                <!-- Form to add to favorites -->
                <form class="favorite-form" action="/favorites/add" method="post">
                  <input type="hidden" name="openLibraryId" value="<%= book.openLibraryId %>" />
                  <input type="hidden" name="title" value="<%= book.title %>" />
                  <input type="hidden" name="author" value="<%= book.author %>" />
                  <input type="hidden" name="coverUrl" value="<%= book.coverUrl %>" />

                  <label for="note-<%= book.openLibraryId.replace(/\W/g, '') %>">
                    Optional note:
                  </label>
                  <input
                    id="note-<%= book.openLibraryId.replace(/\W/g, '') %>"
                    type="text"
                    name="userNote"
                    placeholder="Why do you like this book?"
                  />

                  <button type="submit">Save to Favorites</button>
                </form>
              </div>
            </li>
          <% }); %>
        </ul>
      <% } else if (!error) { %>
        <p>No results found. Try another search term.</p>
      <% } %>
    </section>
  </main>

  <footer class="site-footer">
    <p>Final Exam Project â€¢ Node.js / Express / MongoDB / OpenLibrary API</p>
  </footer>
</body>
</html>